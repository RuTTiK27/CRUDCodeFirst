@{
}
@model List<CRUDCodeFirst.Models.Entity.Student>
<h1>Students</h1>

<a asp-controller="Students" asp-action="Add" class="btn btn-primary">Add</a>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var std in Model)
        {
            <tr>
                <td>@std.Guid</td>
                <td>@std.Name</td>
                <td>@std.Email</td>
                <td>
                    <a asp-controller="Students" asp-action="Edit" asp-route-id="@std.Guid" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>